<div class="container">
    <div class="row">
        <div class="col s12"> 
            <h1>Register child</h1>

            <%= simple_form_for :child do |form| %>
                <%= form.label :name %>
                <%= form.text_field :name %>
                <%= form.hidden_field :user_id, :value => @current_user.id %>
                <%= form.button :submit, "Register"%> 
            <%end%>
        </div>
    </div>
</div>                