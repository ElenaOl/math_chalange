
<div class="container">
	<div class="row">
        <div class="col s4">  
			<h3> Children </h3> 	
			<a class="waves-effect waves-light btn"<%= link_to "Register child", 'children/new', method: :get %></a>      
			<% @children.each do |child| %>
				<a href="<%= child_path(child)%>"><h4><%= child.name %></h4></a>
			<% end %>
		</div>
		<div class="col s8"> 
			<%= image_tag("children.png", :alt => "children img") %>
		</div> 
	</div>
</div>

