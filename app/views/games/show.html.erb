

<div class="container">

    <div class="row">
       
        <div class="col s12">    
            <% if(@game[:total_count] <20) %>
              
                 <h3> Hello!!! Solve This!</h3>
      
                <h2> <%= @game[:problem] %> </h2>
            
                <% url = "/games/#{@game[:id]}" %>

                <%= form_tag(url, method: "put", class: "game_form") do %>      
                <h4>Your Result: </h4>
                <%= text_field_tag(:result) %>    
                <%= submit_tag("Submit")  %>
                <% end %>
            <% else %>
                  
                <a class="waves-effect waves-light btn-large"<%= link_to "Start over", games_path(:child_id => @game[:child_id]) %></a>      
            <% end %>
        </div>
        <div class="col s12">       
            <h4>Your score is:</h4> 
        </div>
        <div class="col s12">              
            <h2><%=@game[:right_count]%>/<%=@game[:total_count]%></h2>
        </div>   
    </div>  
</div>

<div class="container">

    <div class="row">
       
        <div class="col s12">    

        <%= image_tag("numbers.jpg", :alt => "numbers img") %>
       </div>
    </div>
</div>        

